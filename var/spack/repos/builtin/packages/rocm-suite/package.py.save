from spack.package import BundlePacakge, ROCmPackage

class RocmSuite(BundlePackage):
    """AMD ROCm Suite"""

    maintainers = ["srekolam", "renjithravindrankannath", "haampie", "kwryankrattiger"]
    tags = ["rocm"]

    for version in ROCmPackage.rocm_versions:
        version(version)
        depends_on("llvm-amdgpu@{0}".format(version), when="@{0}".format(version))
        depends_on("hsa-rocr-dev@{0}".format(version), when="@{0}".format(version))
        depends_on("hip@{0}".format(version), when="@{0}".format(version))
